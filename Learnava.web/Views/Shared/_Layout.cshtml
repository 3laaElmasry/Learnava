<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Learnava.web</title>

    <!-- Bootstrap & Learnava CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Learnava.web.styles.css" asp-append-version="true" />

    <!-- Icons & External Styles -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="Customer" asp-controller="Home" asp-action="Index">Learnava Academy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.IsInRole(SD.Role_Instructor) || User.IsInRole(SD.Role_Admin))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-folder"></i> Content Management
                                </a>
                                <ul class="dropdown-menu shadow">
                                    <li>
                                        <a class="dropdown-item" asp-area="Instructor" asp-controller="Course" asp-action="Index">
                                            <i class="bi bi-journal-text"></i>Courses
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        @if (User.IsInRole(SD.Role_Student) || User.IsInRole(SD.Role_Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Student" asp-controller="Enrollment" asp-action="Index">
                                    <i class="bi bi-people-fill"></i> Enrollments
                                </a>
                            </li>
                        }


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-envelope"></i> Contact Us
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow">
                                <li>
                                    <a class="dropdown-item" href="https://wa.me/201080850238" target="_blank">
                                        <i class="bi bi-whatsapp text-success"></i> WhatsApp
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="mailto:3laaelmasry2005a@gmail.com">
                                        <i class="bi bi-envelope-at text-primary"></i> Gmail
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="https://www.linkedin.com/in/3laa-elmasry-9265b4241" target="_blank">
                                        <i class="bi bi-linkedin text-info"></i> LinkedIn
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="https://github.com/3laaElmasry" target="_blank">
                                        <i class="bi bi-github text-secondary"></i> GitHub
                                    </a>
                                </li>
                            </ul>

                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container mb-3 pb-3" style="min-height:100vh">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="text-center">
            Learnava Academy Made <i class="bi bi-heart-fill text-danger"></i> by Elmasry
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.datatables.net/2.2.2/js/dataTables.min.js"></script>
    <script src="https://cdn.tiny.cloud/1/gk6bhxkfhg9ypybreeknnb9ahcsmsn9xw21h2sriwasw6xjm/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <partial name="_Notification" />
</body>
</html>
