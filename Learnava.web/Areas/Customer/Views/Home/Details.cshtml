@model Course

@{
    ViewData["Title"] = Model.Title;
}

<div class="container my-4">
    <div class="card shadow-sm border-0">
        <div class="row g-0">
            <div class="col-md-5">
                <img src="@Model.ImgUrl" class="img-fluid rounded-start h-100 w-100 object-fit-cover" alt="@Model.Title" />
            </div>

            <div class="col-md-7">
                <div class="card-body">
                    <h3 class="text-primary">@Model.Title.ToUpper()</h3>

                    <p class="text-secondary">@Model.Description.ToLower()</p>

                    <p class="mb-2">
                        <strong>Created:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy")
                    </p>

                    @if (Model.Instructor != null)
                    {
                        <p class="mb-2">
                            <strong>Instructor:</strong> @Model.Instructor.FullName<br />
                            <strong>Email:</strong> <a href="mailto:@Model.Instructor.Email">@Model.Instructor.Email</a>
                        </p>
                    }

                    <div class="mt-3 d-flex gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back
                        </a>
                        <form asp-area="Student"
                              asp-controller="Enrollment"
                              asp-action="Create"
                              asp-route-courseId="@Model.Id"
                              method="post"
                              class="flex-fill">
                            <button type="submit" class="btn btn-secondary w-100">
                                <i class="bi bi-check-circle"></i> Enroll Now
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
