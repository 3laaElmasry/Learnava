<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                @if(!User.IsInRole(SD.Role_Admin))
                {
                    <h2 class="text-white py-2">
                        @ViewData["instructorName"]
                        Courses</h2>
                }
                else
                {
                    <h2 class="text-white py-2">Admin Access</h2>

                }
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <a asp-controller="Course" asp-action="UpSert" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Create New Course
                </a>
            </div>
        </div>

        <table id="tblData" class="table table-bordered table-striped" width="100%">
            <thead>
                <tr>
                    <th class="text-secondary">Title</th>
                    <th class="text-secondary">Description</th>
                    <th class="text-secondary">Created Date</th>
                    <th class="text-secondary">Instructor Name</th>
                    <th class="text-secondary">Instructor Email</th>
                    <th class="text-secondary"></th>
                </tr>

            </thead>
        </table>

    </div>
</div>

@section Scripts {
    <script src="~/js/Course.js"></script>
}
